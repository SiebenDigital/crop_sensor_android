<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Crop Monitor"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Crop Selector -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cropSelectorLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Crop / Sensor"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/cropSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    app:simpleItems="@array/crops_array" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Humidity Hero Section -->
            <FrameLayout
                android:id="@+id/humidityContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cropSelectorLayout">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/humidityProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:indicatorColor="?attr/colorPrimary"
                    app:indicatorSize="200dp"
                    app:trackColor="?attr/colorSurfaceVariant"
                    app:trackThickness="16dp"
                    android:progress="0"
                    android:max="100" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/humidityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--%"
                        android:textAppearance="?attr/textAppearanceDisplayMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </FrameLayout>

            <!-- Smaller Gauges Row -->
            <LinearLayout
                android:id="@+id/smallGaugesRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:baselineAligned="false"
                app:layout_constraintTop_toBottomOf="@id/humidityContainer">

                <!-- Temperature Gauge Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/tempProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:indicatorColor="?attr/colorError"
                            app:indicatorSize="100dp"
                            app:trackColor="?attr/colorSurfaceVariant"
                            app:trackThickness="8dp"
                            android:progress="0"
                            android:max="100" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tempText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--Â°C"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Temperature"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />
                </LinearLayout>

                <!-- Sunlight Gauge Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/sunlightProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:indicatorColor="?attr/colorTertiary"
                            app:indicatorSize="100dp"
                            app:trackColor="?attr/colorSurfaceVariant"
                            app:trackThickness="8dp"
                            android:progress="0"
                            android:max="100" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sunlightText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--%"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Sunlight"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />
                </LinearLayout>
            </LinearLayout>


            <!-- Suggestion Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/suggestionCard"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#F5F5F5"
                app:layout_constraintTop_toBottomOf="@id/smallGaugesRow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/suggestionIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Suggestion Icon"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        app:tint="#424242" />

                    <TextView
                        android:id="@+id/suggestionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Waiting for data..."
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:textColor="#424242" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- History Graphs -->
            <TextView
                android:id="@+id/historyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="24h History (Humidity)"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/suggestionCard" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historyChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/historyTitle"/>

            <!-- Temperature Graph -->
            <TextView
                android:id="@+id/tempHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="24h History (Temperature)"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/historyChart" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/tempHistoryChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tempHistoryTitle"/>

            <!-- Sunlight Graph -->
            <TextView
                android:id="@+id/sunlightHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="24h History (Sunlight)"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tempHistoryChart" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/sunlightHistoryChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/sunlightHistoryTitle"
                app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>
